<script>
    function TornaEventoExclusivo(exclusivo) {
        if (exclusivo == 1) {
            document.getElementById('adicionarUsuario').style.display = 'none';
            document.getElementById('adcUsuario').style.display = 'none';
        } else
            document.getElementById('adicionarUsuario').style.display = 'block';
            document.getElementById('adcUsuario').style.display = 'none';

    }
</script>

